<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FlightOfferLarge">
        <item name="android:layout_marginStart">@dimen/pager_margin_default</item>
        <item name="android:layout_marginLeft">@dimen/pager_margin_default</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Large</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FlightOfferSmall" parent="FlightOfferLarge">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Small</item>
    </style>

    <style name="BottomText">
        <item name="android:layout_marginStart">@dimen/pager_margin_default</item>
        <item name="android:layout_marginLeft">@dimen/pager_margin_default</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Small</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BottomTextLabel" parent="BottomText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorText">
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Large</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
